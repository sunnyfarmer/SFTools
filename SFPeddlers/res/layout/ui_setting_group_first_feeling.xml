<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <LinearLayout
            android:id="@+id/llFirstFeeling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/rectangle_up"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/first_feeling"
                android:textSize="@dimen/content_size"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnAddFirstFeeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_size"
                android:text="@string/add_first_feeling" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvFirstFeelingConfig"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
</LinearLayout>