<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

	<include layout="@layout/ui_header"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/activity_header_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/ui_cargo_type"/>
        <ListView
            android:id="@+id/lvCargoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <include layout="@layout/ui_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_footer_height"/>
</LinearLayout>